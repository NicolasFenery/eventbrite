<div class="container">
	<% if current_user == @event.administrator %>
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Modifier l'évenement</h5>

            <%= form_for @event do |f| %>

             <div class="form-label-group">
              <%= f.text_field :title, class: "form-control", id: "inputTitle"  %>
          </div>

          <div class="form-label-group">
                <%= f.text_field :description, class: "form-control", id: "inputDescription" %>
              </div>

          <div class="form-label-group">
              <%= f.text_field :start_date, class: "form-control", id: "inputStart_date" %>
          </div>

          <div class="form-label-group">
              <%= f.text_field :duration, class: "form-control", id: "inputDuration"  %>
          </div>

          <div class="form-label-group">
                <%= f.text_field :price, class: "form-control", id: "inputPrice"  %>
              </div>

          <div class="form-label-group">
              <%= f.text_field :location, class: "form-control", id: "inputLocation" %>
          </div>

          <div class="form-group">
              <%= f.submit "Modifier Évenement", class: "btn btn-lg btn-info btn-block text-uppercase" %>
              <a href="<%= event_path(@event.id) %>" class= "btn btn-danger btn-block mt-3 text-uppercase" data-method="DELETE">Supprimer évenement</a>

          </div>
          </div>
        </div>
      </div>
    </div>
    	<% end %> 
   <% end %>
</div>
