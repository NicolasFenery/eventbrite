<% if @event.errors.any? %>
   <div class="alert alert-danger text-center" role="alert">
 <p>Nous n'avons pas réussi à créer l'évenement' pour la (ou les) raison(s) suivante(s) :</p>
 <ul>
   <% @event.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>
</div>
<% end %>


<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Créer un évenement</h5>
            <%= form_tag url_for(action: 'create'), method: "post", class: "form-signin" do %>

             <div class="form-label-group">
            	<%= text_field_tag 'title', @title, class: "form-control", id: "inputTitle", placeholder: "Titre", :required => true  %>
      		</div>

      		<div class="form-label-group">
                <%= text_field_tag 'description', @description, class: "form-control", id: "inputDescription", placeholder: "Description", :required => true  %>
              </div>

      		<div class="form-label-group">
            	<%= text_field_tag 'start_date', @start_date, class: "form-control", id: "inputStart_date", placeholder: "Date", :required => true %>
      		</div>

      		<div class="form-label-group">
            	<%= text_field_tag 'duration', @duration, class: "form-control", id: "inputDuration", placeholder: "Durée", :required => true  %>
      		</div>

      		<div class="form-label-group">
                <%= text_field_tag 'price', @price, class: "form-control", id: "inputPrice", placeholder: "Prix", :required => true  %>
              </div>

      		<div class="form-label-group">
            	<%= text_field_tag 'location', @location, class: "form-control", id: "inputLocation", placeholder: "Lieu", :required => true %>
      		</div>

      		<div class="form-group">
            	<%= submit_tag "Créer Évenement", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
      		</div>
          </div>
        </div>
      </div>
    </div>
    <% end %>	
</div>